set -e -x

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
cd "$DIR/../tests"
docker run -it --rm -u "$UID" -v "$PWD:$PWD" -w "$PWD" omnilint python3 -m unittest discover
